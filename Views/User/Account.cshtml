@{
  ViewData["Title"] = "My Account";
}


<style>
  .account_container {
     @* border: 1px solid black; *@
  box-shadow: 2px 2px 10px 10px rgba(255, 0, 0, 0.109);
  margin: 50px auto;
  padding: 50px;
  border-radius: 10px;
  width: 50%;
  
  height: 500px;
   @* justify-content: center;

    min-height: 70vh;
    margin-top: 50px;
    margin-bottom: 50px;
    width: 800px;
    margin-left: 150px;
   
    box-shadow: 1px 1px #bb0000;

    >h1 {
      margin-top: 60px;
      font-size: 44px;
      display: flex;
      align-items: center;
      justify-content: center;

    }

    >p {
      margin-right: 7px;
      font-size: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

  }

  .btn-btn-primary {
    
    border-radius: 5px;
    font-size: 24px;
    background-color: #bb0000;
    color: #ffffff;
  
    padding: 10px;*@
    


  }
</style>





<div class="account_container">

  <h1>REGISTERED USER</h1>

  <p>Kindly Login To Your Account</p>
  <a asp-controller="user" asp-action="login"><button class="btn-btn-primary" style="margin-top: 20px;margin-bottom: 20px; background-color: #bb0000;color: #ffffff;padding:6px 12px;font-family: Montserrat, sans-serif;font-size: 14px; border-radius: 5px;">Login</button></a>

  <h1>NEW USER</h1>

  <p>If New User Kindly Create An Account</p>
  <a asp-controller="user" asp-action="register"><button class="btn-btn-primary" style="margin-top: 20px; background-color: #bb0000;color: #ffffff;padding:6px 12px;font-family: Montserrat, sans-serif;font-size: 14px; border-radius: 5px;">Create Account</button></a>


</div>
