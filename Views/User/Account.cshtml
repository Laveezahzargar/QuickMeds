@{
  ViewData["Title"] = "My Account";
}


<style>
  .account_container {
    justify-content: center;

    min-height: 70vh;
    margin-top: 50px;
    margin-bottom: 50px;
    width: 800px;


    border: 1px solid black;

    >h1 {
      margin-top: 60px;
      font-size: 44px;
      display: flex;
      align-items: center;
      justify-content: center;

    }

    >p {
      margin-right: 7px;
      font-size: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

  }

  .btn-btn-primary {
    
    border-radius: 5px;
    font-size: 24px;
    background-color: #bb0000;
    color: #ffffff;
    margin-top: 20px;
    margin-bottom: 20px;



  }
</style>





<div class="account_container">

  <h1>REGISTERED USER</h1>

  <p>Kindly Login To Your Account</p>
  <a asp-controller="user" asp-action="login"><button class="btn-btn-primary">Login</button></a>

  <h1>NEW USER</h1>

  <p>If New User Kindly Create An Account</p>
  <a asp-controller="user" asp-action="register"><button class="btn-btn-primary">Create Account</button></a>


</div>
